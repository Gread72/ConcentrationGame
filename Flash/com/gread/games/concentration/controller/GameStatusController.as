package com.gread.games.concentration.controller {		import com.gread.games.concentration.model.GameModel;	import com.gread.games.concentration.view.GameStatusView;		
		public class GameStatusController {				private var _view:GameStatusView;		private var _model:GameModel;				/* 			constructor function			@param view GameStatusView			@param model GameModel		*/		public function GameStatusController(view:GameStatusView, model:GameModel) {			_view = view;			_model = model;			_model.currentGameStatus.add(onCurrentGameStatus);		}				private function onCurrentGameStatus(eventObj:Object):void{			var message:String = "";			if(_model.isGameOver){				message = "End time is " + eventObj.timeOfGame + " seconds.";				if(eventObj.timeOfGame < _model.bestTime){					_model.bestTime = eventObj.timeOfGame;				}			}else{				message = "Current time is " + eventObj.timeOfGame + " seconds. ";				if(_model.bestTime > 0){					message = message +  "Best Time is " + _model.bestTime				}							}						_view.setMessage(message);		}	}	}