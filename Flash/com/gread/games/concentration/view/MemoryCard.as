package  com.gread.games.concentration.view{		import com.gread.games.concentration.model.vo.GameCardVO;	import com.gread.flash.graphics.BoxGraphic;	import flash.display.Sprite;	import com.greensock.TweenLite;		public class MemoryCard extends Sprite{				/* Private and Public variables */		private var _gameCardVO:GameCardVO;		private var _colorBox:BoxGraphic;		private var _coverBox:BoxGraphic;		public static var WIDTH:Number = 100;		public static var HEIGHT:Number = 100;				/* 		constructor function		@param vo:GameCardVO		*/		public function MemoryCard(vo:GameCardVO) {			_gameCardVO = vo;			init();		}				/* initialize function */		private function init():void{			_colorBox = createBox(_gameCardVO.colorBG);			_coverBox = createBox(0x000);		}				/*			function createBox			Create graphic element - box graphic			@param color : uint			@return BoxGraphic		*/		private function createBox(color:uint):BoxGraphic{			var graphicRec:BoxGraphic;			graphicRec = new BoxGraphic(this, 0, 0, WIDTH, HEIGHT, 1, color);			//graphicRec.ellipseWidth = graphicRec.ellipseHeight = 50;			graphicRec.lineColor = 0x00;			graphicRec.lineThickness = 1;			graphicRec.create();						return graphicRec;		}				/*			function revealMemoryCard			Show Memory Color element			@return void		*/		public function revealMemoryCard():void{			//Sprite(_coverBox.element).alpha = 0;			TweenLite.to(_coverBox.element, .5, {alpha:0});		}				/*			function hideMemoryCard			Hide Memory Color element			@return void		*/		public function hideMemoryCard():void{			//Sprite(_coverBox.element).alpha = 1;			TweenLite.to(_coverBox.element, 1, {alpha:1, delay:.5});					}				/*			function gameCard			Setter for gamecard value object			@return GameCardVO		*/		public function get gameCard():GameCardVO{			return _gameCardVO;		}				/*			function matchedCard			Method for changing gamecard value - can't set value object			@return void		*/		public function matchedCard():void{			_gameCardVO.matched = true;		}			}	}